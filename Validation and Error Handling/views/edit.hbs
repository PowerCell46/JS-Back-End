{{#if error}}
    <div id="notifications">
    <p id="notification-message">{{error}}</p>
    </div>
{{/if}}

<main>
    <h1>Edit Cube</h1>
    <div class="form">
        <form action="/edit/{{cube._id}}" method="POST">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="{{cube.name}}">
            <label for="description">Description</label>
            <textarea id="description" name="description">{{cube.description}}</textarea>
            <label for="image">ImageUrl</label>
            <input type="text" id="image" name="imageUrl" value="{{cube.imageUrl}}">
            <label for="difficulty">Difficulty</label>
            <select id="difficulty" name="difficultyLevel" />
         
            {{#if selectedObj.first}}
                <option selected value="1">1 - Very Easy</option>
            {{else}}
                <option value="1">1 - Very Easy</option>
            {{/if}}

            {{#if selectedObj.second}}
                <option selected value="2">2 - Easy</option>
            {{else}}
                <option value="2">2 - Easy</option>
            {{/if}}

            {{#if selectedObj.third}}
                <option selected value="3">3 - Medium (Standard 3x3)</option>
            {{else}}
                <option value="3">3 - Medium (Standard 3x3)</option>
            {{/if}}

            {{#if selectedObj.fourth}}
                <option selected value="4">4 - Intermediate</option>
            {{else}}
                <option value="4">4 - Intermediate</option>
            {{/if}}

            {{#if selectedObj.fifth}}
                <option selected value="5">5 - Expert</option>
            {{else}}
                <option value="5">5 - Expert</option>
            {{/if}}

            {{#if selectedObj.sixth}}
                <option selected value="6">6 - Hardcore</option>
            {{else}}
                <option value="6">6 - Hardcore</option>
            {{/if}}

            </select>
            <input type="submit" value="Edit">
        </form>
    </div>
</main>