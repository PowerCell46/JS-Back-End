{{#if err}}
<!-- In case of error, you should display div with class "errorContainer" -->
<!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
<div>
    <div class="errorContainer">
        <p>{{err}}</p>
    </div>
</div>
{{/if}}

<section id="editPage">
    <form id='editForm' method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="{{electronic.name}}">

        <label for="type">Type:</label>
        <input type="text" id="type" name="type" value="{{electronic.type}}">

        <label for="production">Year of Production:</label>
        <input type="number" id="production" name="year" value="{{electronic.production}}">

        <label for="exploitation">Years of Exploitation:</label>
        <input type="number" id="exploitation" name="exploitation" value="{{electronic.exploitation}}">

        <label for="damages">Damages:</label>
        <input type="text" id="damages" name="damages" value="{{electronic.damages}}">

        <label for="image">Image:</label>
        <input type="text" id="image" name="imageUrl" value="{{electronic.imageUrl}}">

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="{{electronic.price}}">

        <label for="description">Description:</label>
        <input type="text" id="description" name="description" value="{{electronic.description}}">                

        <input type="submit" class="edit" value="Edit Offer">
    </form>
</section>
