<main>
  <h1>{{cube.name}}</h1>
  <img class="cube" src="{{cube.imageUrl}}">
  <div class="details">
    <p><span>Description:</span> {{cube.description}}</p>
    <p><span>Difficulty level:</span> {{cube.difficultyLevel}}</p>
    <div>
      {{#if isCreator}}
        <a style="margin-left: 7.5rem;" class="btn" href="/edit/{{cube._id}}">Edit</a>
        <a class="btn" href="/delete/{{cube._id}}">Delete</a>
      {{/if}}
        <a style="margin-left: 7.5rem;" class="btn" href="/">Back</a>
      {{#if isCreator}}
        <a class="btn" href="/attach/accessory/{{cube._id}}">Add Accessory</a>
      {{/if}}
    </div>
  </div>
  
  <h2>Accessories</h2>
  <div class="accessories">
  {{#if accessories}}
        {{#each accessories}}
        <div class="accessory">
            <img src="{{imageUrl}}" alt="{{name}}">
            <h3>{{name}}</h3>
            <p>{{description}}</p>
        </div>
        {{/each}}
    {{else}}
        <h3 class="italic">This cube has no accessories yet...</h3>
    {{/if}}
  </div>
</main>